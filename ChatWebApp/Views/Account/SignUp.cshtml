@model SignUpModel
@{
    ViewData["Title"] = "SignUp Page";
}

<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
    <div class=" card-box">
        <div class="panel-heading">
            <h3 class="text-center"> Sign Up to <strong class="text-custom">ChatApp</strong> </h3>
        </div>
        <div class="panel-body">
            <form class="form-horizontal m-t-20" method="post" asp-action="SignUp" asp-controller="Account">

                <div class="form-group">
                    <div class="col-xs-6">
                        <input class="form-control" type="text" asp-for="FirstName" required="" placeholder="Firstname">
                        <span class="text-danger text-sm" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="col-xs-6">
                        <input class="form-control" type="text" asp-for="LastName" required="" placeholder="Lastname">
                        <span class="text-danger text-sm" asp-validation-for="LastName"></span>
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="email" asp-for="EmailAddress" required="" placeholder="Email">
                        <span class="text-danger text-sm" asp-validation-for="EmailAddress"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-6">
                        <input class="form-control" type="password" asp-for="Password" required="" placeholder="Password">
                        <span class="text-danger text-sm" asp-validation-for="Password"></span>
                    </div>
                    <div class="col-xs-6">
                        <input class="form-control" type="password" asp-for="ConfirmPassword" required="" placeholder="Password">
                        <span class="text-danger text-sm" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>

                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <button class="btn btn-pink btn-block text-uppercase waves-effect waves-light" type="submit">
                            Register
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 text-center">
            <p>
                Already have account?<a asp-action="SignIn" asp-controller="Account" class="text-primary m-l-5"><b>Sign In</b></a>
            </p>
        </div>
    </div>

</div>
